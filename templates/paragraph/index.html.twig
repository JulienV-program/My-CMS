{% extends 'admin/admin.html.twig' %}

{% block title %}Paragraph index{% endblock %}

{% block Admin %}
    <h1>Paragraph index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paragraph in paragraphs %}
            <tr>
                <td>{{ paragraph.id }}</td>
                <td>{{ paragraph.Title }}</td>
                <td>{{ paragraph.Body }}</td>
                <td>
                    <a href="{{ path('paragraph_show', {'id': paragraph.id}) }}">show</a>
                    <a href="{{ path('paragraph_edit', {'id': paragraph.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('paragraph_new') }}">Create new</a>
{% endblock %}
