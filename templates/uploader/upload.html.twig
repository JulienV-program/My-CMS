{% extends 'base.html.twig' %}
{% dump %}
{% block title %}Hello UploaderController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div>
        {% include 'uploader/_delete_Galerie_form.html.twig'%}
    </div>

    <div>
        {% include 'uploader/dropzone.html.twig' with {'id' : galeryId} %}
    </div>
    <div class="presentation-global">


            {% for elem in images %}
                <div class="presentation">
                    {% if elem.carrousel.id ==  galeryId %}
                        <img src="{{ elem.path  | imagine_filter('squared_thumbnail') }}">
                        {% set photo = { 'photo': elem } %}
                        {% include 'uploader/_delete_form.html.twig' with photo %}
                    {% endif %}
                </div>

            {% endfor %}


    </div>
{% endblock %}
