{% extends 'base.html.twig' %}
{% dump %}
{% block title %}Dogs{% endblock %}

{% block body %}
    <h1>Dogs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dog.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dog.Name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ dog.Description }}</td>
            </tr>
            <tr>
                <th>Breed</th>
                <td>{{ dog.Breed }}</td>
            </tr>
            <tr>
                <th>LOF</th>
                <td>{{ dog.LOF }}</td>
            </tr>


        </tbody>

    </table>

        <div class="row">
            {% for elem in images %}
                <div class="presentation col-2 ">
                    <img src="{{ elem.path  | imagine_filter('squared_thumbnail') }}">
                    {% set photo = { 'photo': elem } %}
                </div>

            {% endfor %}
        </div>
    </div>

    <a href="{{ path('dogs_index') }}">back to list</a>

    <a href="{{ path('dogs_edit', {'id': dog.id}) }}">edit</a>

    {{ include('dogs/_delete_form.html.twig') }}
{% endblock %}
