{% extends 'base.html.twig' %}

{% block title %}Puppys{% endblock %}

{% block body %}
    <h1>Puppys</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ puppy.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ puppy.Description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('puppys_index') }}">back to list</a>

    <a href="{{ path('puppys_edit', {'id': puppy.id}) }}">edit</a>

    <div class="row">
        {% for elem in images %}
            <div class="presentation col-2 ">
                <img src="{{ elem.path  | imagine_filter('squared_thumbnail') }}">
                {% set photo = { 'photo': elem } %}
            </div>

        {% endfor %}
    </div>
    {{ include('puppys/_delete_form.html.twig') }}
{% endblock %}
