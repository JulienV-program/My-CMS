{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<section>
    <div class="container">
        <div class="row">
            {% for item in page.paragraph %}
            <div class="col-8">
                <div class="presentation">
                    <p>{{ item.body }}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

</section>


<section class="homme-slider">
    <div class="row carousel-container">
        {% dump %}

        {% for item in page.carrousel %}


            <div class="col-sm-12 col-md-12 col-lg-8 mb-4">
                <div id="carouselExampleIndicators{{ item.id }}" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for elem in carrousel %}
                            {% if elem.id == item.id %}
                                {% for image in elem.images %}
                                    <li data-target="#carousel" data-slide-to="{{ loop.index0 }}" {% if loop.index0 == 0 %} class="item-active" {% endif %}></li>
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                    </ol>

                    <div class="carousel-inner">
                        {% for elem in carrousel %}
                            {% if elem.id == item.id %}
                                {% for image in elem.images %}
                                    <div class="carousel-item {{ loop.index0 }} {% if loop.first %}active {% endif %}">
                                        <div class="my-slider-item" style="background-image : url({{ image.path }})">
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators{{ item.id }}" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators{{ item.id }}" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

        {% endfor %}

    </div>
</section>



